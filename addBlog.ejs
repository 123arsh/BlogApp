<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs') %>
    <title>Blog</title>
</head>
<body>
    <%- include('./partials/nav') %>
    <form action="/blog" method="post" enctype="multipart/form-data">
        <div class="container">
          <div class="mb-3">
            <label for="coverImage" class="form-label">Cover Image</label>
            <input class="form-control form-control-sm" id="coverImage" type="file" name="coverImage">
          </div>
        
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" class="form-control" id="title" aria-describedby="title" name="title"> 
              </div>
        
            <div class="mb-25">
                <label for="body" class="mb-3">Body</label>
                <textarea class="form-control" placeholder="Leave a comment here" id="body" name="body"></textarea>
              </div>
        
              <div class="mt-3">
                <button class="btn btn-primary">Submit</button>
              </div>
        </div>
    </form>
    
    <%- include('./partials/script.ejs') %>
</body>
</html>